@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}


<form class="login-form" asp-controller="auth" asp-action="register" method="post" asp-antiforgery="true">
    <div class="form-group">
        <input style="padding-left:15px" asp-for="FirstName" type="text" class="form-control rounded-left" placeholder="First Name" required>
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input style="padding-left:15px" asp-for="LastName" type="text" class="form-control rounded-left" placeholder="Last Name" required>
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input style="padding-left:15px" asp-for="Email" type="email" class="form-control rounded-left" placeholder="Email" required>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input style="padding-left:15px" asp-for="Password" type="password" class="form-control rounded-left" placeholder="Password" required>
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input style="padding-left:15px" asp-for="PasswordConfirm" type="password" class="form-control rounded-left" placeholder="Confirm Password" required>
        <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
    </div>
    <div class="form-group d-flex align-items-center">

        <div class="w-100 d-flex justify-content-end">
            <button type="submit" class="btn btn-primary rounded submit btn-block">Register</button>
        </div>
    </div>
    <div class="form-group mt-4">
        <div class="w-100 text-center">
            <p class="mb-1">Already have an account? <a href="/auth/login">Login</a></p>
            <p><a href="#">Forgot Password</a></p>
        </div>
    </div>
</form>

